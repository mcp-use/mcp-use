{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": "src/client",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist/client",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/client/index.ts",
    "src/types/**/*"
  ],
  "exclude": ["src/server/**/*", "src/client/**/*.test.*", "src/client/**/*.spec.*"]
}
